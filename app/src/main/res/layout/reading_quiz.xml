<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_background">

    <!-- HEADER -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_yellow"
            app:title="Reading Quiz"
            app:titleTextColor="@color/primary_blue"/>
    </com.google.android.material.appbar.AppBarLayout>


    <!-- TIMER -->
    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05:00"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue"
        android:background="@color/color_yellow"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- SCROLL VIEW chứa BÀI ĐỌC + 5 CÂU HỎI -->
    <ScrollView
        android:id="@+id/scrollQuiz"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTimer"
        app:layout_constraintBottom_toTopOf="@id/btnSubmit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- KHUNG BÀI ĐỌC -->
            <TextView
                android:id="@+id/txtReadingContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung bài đọc..."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="14dp" />

            <!-- ========================== CÂU 1 =========================== -->
            <TextView
                android:id="@+id/tvQ1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Câu 1: Nội dung câu hỏi 1?"
                android:textColor="@color/dark_red_text"
                android:textSize="18sp"
                android:paddingTop="20dp" />

            <RadioGroup
                android:id="@+id/rgQ1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A. Trả lời A" />

                <RadioButton
                    android:id="@+id/q1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. Trả lời B" />

                <RadioButton
                    android:id="@+id/q1c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. Trả lời C" />

                <RadioButton
                    android:id="@+id/q1d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D. Trả lời D" />
            </RadioGroup>

            <!-- ========================== CÂU 2 =========================== -->
            <TextView
                android:id="@+id/tvQ2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Câu 2: Nội dung câu hỏi 2?"
                android:textColor="@color/dark_red_text"
                android:textSize="18sp"
                android:paddingTop="20dp" />

            <RadioGroup
                android:id="@+id/rgQ2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A. Trả lời A" />

                <RadioButton
                    android:id="@+id/q2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. Trả lời B" />

                <RadioButton
                    android:id="@+id/q2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. Trả lời C" />

                <RadioButton
                    android:id="@+id/q2d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D. Trả lời D" />
            </RadioGroup>

            <!-- ========================== CÂU 3 =========================== -->
            <TextView
                android:id="@+id/tvQ3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Câu 3: Nội dung câu hỏi 3?"
                android:textColor="@color/dark_red_text"
                android:textSize="18sp"
                android:paddingTop="20dp" />

            <RadioGroup
                android:id="@+id/rgQ3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A. Trả lời A" />

                <RadioButton
                    android:id="@+id/q3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. Trả lời B" />

                <RadioButton
                    android:id="@+id/q3c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. Trả lời C" />

                <RadioButton
                    android:id="@+id/q3d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D. Trả lời D" />
            </RadioGroup>

            <!-- ========================== CÂU 4 =========================== -->
            <TextView
                android:id="@+id/tvQ4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Câu 4: Nội dung câu hỏi 4?"
                android:textColor="@color/dark_red_text"
                android:textSize="18sp"
                android:paddingTop="20dp" />

            <RadioGroup
                android:id="@+id/rgQ4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A. Trả lời A" />

                <RadioButton
                    android:id="@+id/q4b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. Trả lời B" />

                <RadioButton
                    android:id="@+id/q4c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. Trả lời C" />

                <RadioButton
                    android:id="@+id/q4d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D. Trả lời D" />
            </RadioGroup>

            <!-- ========================== CÂU 5 =========================== -->
            <TextView
                android:id="@+id/tvQ5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Câu 5: Nội dung câu hỏi 5?"
                android:textColor="@color/dark_red_text"
                android:textSize="18sp"
                android:paddingTop="20dp" />

            <RadioGroup
                android:id="@+id/rgQ5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q5a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A. Trả lời A" />

                <RadioButton
                    android:id="@+id/q5b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. Trả lời B" />

                <RadioButton
                    android:id="@+id/q5c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. Trả lời C" />

                <RadioButton
                    android:id="@+id/q5d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D. Trả lời D" />
            </RadioGroup>

        </LinearLayout>
    </ScrollView>


    <!-- Nút Nộp Bài -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nộp bài"
        android:textSize="18sp"
        android:textColor="@color/primary_blue"
        android:backgroundTint="@color/color_yellow"
        android:padding="14dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
